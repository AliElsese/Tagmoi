<!DOCTYPE html>
<html lang="en">
    
    <head>

        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Tagmoi</title>

        <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="/assets/css/all.min.css">
        <link rel="stylesheet" href="/assets/css/style-website.css">

    </head>

    <body>

        <%- include('include/_header') %>

        <div class="row flex-nowrap">
            <div class="col-auto">
                <aside class="sidebar bg-white">
                    <ul class="sidebar-nav" id="sidebar-nav">
                    
                        <li class="nav-item active">
                            <span class="active d-flex justify-content-between align-items-center">
                                <a class="nav-link active" href="/header" style="display: inline-block;">
                                    header
                                </a>
                                <i class="fa-solid fa-caret-down me-4" data-bs-target="#header-nav" data-bs-toggle="collapse" style="cursor: pointer;display: inline-block;color: #00B0FF;"></i>
                            </span>
                            <ul id="header-nav" class="nav-content active" data-bs-parent="#sidebar-nav">
                                <li>
                                    <a href="/logo" class="active">
                                        logo
                                    </a>
                                </li>
                                <li>
                                    <a href="/announcment-bar">
                                        announcment bar
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="sidebar-divider"></li>
                        <% for(var x = 0; x < sections.length; x++) { %>
                        <li class="nav-item">
                            <span class="d-flex justify-content-between align-items-center">
                                <a class="nav-link" href="/<%= sections[x].section_enName %>" style="display: inline-block;">
                                    <%= sections[x].section_enName %>
                                </a>
                                <i class="fa-solid fa-caret-down me-4" data-bs-target="#<%= sections[x].section_enName %>-nav" data-bs-toggle="collapse" style="cursor: pointer;display: inline-block;color: #000000;"></i>
                            </span>
                            <ul id="<%= sections[x].section_enName %>-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                                <% for(var y = 0; y < sbsections.length; y++) { %>
                                    <% if (sections[x].section_id != sbsections[y].section_id) continue %>
                                    <li>
                                        <a href="/<%= sbsections[y].sb_enName %>">
                                            <%= sbsections[y].sb_enName %>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </li>
                        <li class="sidebar-divider"></li>
                        <% } %>
                    </ul>
                </aside>
            </div>
            <div class="col">
                <div class="content">
                    <div class="page-header">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-between">
                                <div class="page-title">
                                    <h2>header - logo</h2>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="divider"></div>
                            </div>
                        </div>
                    </div>

                    <div class="page-form">
                        <div class="card">
                            <form action="/updateLogo" method="post" enctype="multipart/form-data" class="logo-form">
                                <div class="row">
                                    <div class="col-12 d-flex justify-content-between">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <p>Logo</p>
                                            <label for="logo_image" style="cursor: pointer;">
                                                upload image
                                            </label>
                                            <input type="hidden" name="logo_id" value="<%= logo[0].logo_id %>">
                                            <input type="file" name="logo_image" id="logo_image" style="display: none;">
                                        </div>
                                        <img src="/<%= logo[0].logo_image %>" alt="">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="divider"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-end">
                                        <button type="submit">save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="/assets/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/all.min.js"></script>
        
    </body>

</html>